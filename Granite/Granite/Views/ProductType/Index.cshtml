@model IEnumerable<Granite.Models.ProductType>

@{
    ViewData["Title"] = "ProductTypes";
}

<div>
    <h1>Product Type List</h1>
    <a class="btn btn-primary" href="@Url.Action("Add", "ProductType")">
        Add New Product
    </a>
</div>

<table class="table">
    <thead>
       <tr>
           <th>Name</th>
       </tr>
    </thead>
    <tbody>
    @foreach (var productType in Model)
    {
        <tr>
            <td class="col-lg-8">
                @productType.Name
            </td>
            <td class="col-lg-4">
                <div class="edit-section">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@productType.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@productType.Id"><i class="fas fa-list"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@productType.Id"><i class="fas fa-trash-alt"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>

</table>